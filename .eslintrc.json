{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "globals": {
    "Blockly": "readonly",
    "WorkspaceSearch": "readonly",
    "cv": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "semi": "error",
    "valid-jsdoc": "warn"
  }
}
